@using SegundaEvaluacion.Utilities
@model IEnumerable<SegundaEvaluacion.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado de Productos</h2>

<p>
    @Html.ActionLink("Crear", "Form", new { operacion = Operacion.insertar }, new { @class = "btn btn-primary glyphicon glyphicon-plus" })
</p>
@if (Model.Count() > 0)
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idProduct)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idStore)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.stock)
        </th>
        <th>Opciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idProduct)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.idStore)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.stock)
        </td>
        <td>
            @Html.ActionLink("Editar", "Form", new { id = item.idProduct, operacion = Operacion.modificar }, new { @class = "btn btn-xs btn-warning" })
            @Html.ActionLink("Ver", "Form", new { id = item.idProduct, operacion = Operacion.ver }, new { @class = "btn btn-xs btn-info" })
            @Html.ActionLink("Eliminar", "Delete", new { id = item.idProduct, operacion = Operacion.eliminar }, new { @class = "btn btn-xs btn-danger eliminar" })
        </td>
    </tr>
}

</table>

}
else
{
    <h4 class="text-center">No hay datos</h4>
}
